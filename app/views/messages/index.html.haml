=render 'groups/sidebar'

%div.section-right
  %div.section-right-top
    %div.group-name
      %p=@groupa.name
      %span Member：
      - @groupa.users.each do |user|
        %i=user.name
    =link_to "Edit",edit_group_path(params[:group_id]),class:"edit"
  -# メッセージ一覧
  %div.section-right-bottom
    %div.message-area
      - @groupa.messages.each do |message|
        =message.user.name
        %i.time=message.created_at.strftime("%Y/%m/%d %H:%M:%S")
        %div.message=simple_format(message.body)
        =image_tag message.image

  -#メッセージ送信エリア
  %div.sent-area
    =render 'form'
