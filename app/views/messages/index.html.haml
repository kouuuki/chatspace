%h1 Listing messages

%table
  %thead
    %tr
      %th Body
      %th Image
      %th Group
      %th User
      %th
      %th
      %th

  %tbody
    - @messages.each do |message|
      %tr
        %td= message.body
        %td= message.image
        %td= message.group_id
        %td= message.user_id
        %td= link_to 'Show', message
        %td= link_to 'Edit', edit_message_path(message)
        %td= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Message', new_message_path
