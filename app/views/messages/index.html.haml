=render 'groups/sidebar'

%div.section-right
  %div.section-right-top
    %div.group-name
      =@group.name
      %br
        %span Member
      - @group.users.each do |user|
        %i=user.name
    =link_to "Edit",edit_group_path(params[:group_id]),class:"edit"
  -# メッセージ一覧
  %div.section-right-bottom
    %div.message-area
      - @group.messages.each do |message|
        =message.user.name
        %i.time=message.created_at.strftime("%Y/%m/%d %H:%M:%S")
        %div.message=message.body
  -#メッセージ送信エリア
  %div.sent-area
    %div.form-controll
      %input.message-form
      %i.fa.fa-picture-o.fa-lg
      %a.square_btn SENT
